# =============================================================================
# AirSense Frontend - Environment Variables
# =============================================================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Application Configuration
NEXT_PUBLIC_APP_NAME=AirSense
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Advanced Air Quality Monitoring System

# UI Configuration
NEXT_PUBLIC_REFRESH_INTERVAL=30000
NEXT_PUBLIC_CHART_ANIMATION_DURATION=1000
NEXT_PUBLIC_ENABLE_SMOOTH_SCROLL=true

# Location Configuration
NEXT_PUBLIC_DEFAULT_CITY=bengaluru
NEXT_PUBLIC_DEFAULT_COUNTRY=in
NEXT_PUBLIC_DEFAULT_LAT=12.9716
NEXT_PUBLIC_DEFAULT_LON=77.5946

# Analytics Configuration (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Feature Flags
NEXT_PUBLIC_ENABLE_PREDICTIONS=true
NEXT_PUBLIC_ENABLE_ALERTS=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_PWA=true

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_THEME_TOGGLE=true
